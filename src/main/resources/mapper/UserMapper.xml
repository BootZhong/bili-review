<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zfg.learn.dao.UserMapper">

    <select id="selectByName" resultType="com.zfg.learn.model.po.User">
        select *from user
        where username = #{username}
    </select>

    <select id="selectByEmail" resultType="com.zfg.learn.model.po.User">
        select *from user
        where email = #{email}
    </select>

    <update id="updateCookie">
        update user
        set cookie = #{cookie}
        where uid = #{uid}
    </update>

    <update id="bindBiliCount">
        update user
        set mid = #{mid},
        cookie = #{cookie}
        where uid = #{uid}
    </update>

    <insert id="insert" parameterType="com.zfg.learn.model.po.User">
        insert into user
        (username, password, email, mid, cookie)
        values (#{username}, #{password}, #{email}, #{mid}, #{cookie})
    </insert>
</mapper>