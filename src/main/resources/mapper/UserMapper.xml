<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.zfg.learn.dao.UserMapper">
    <select id="selectUserByMid" parameterType="Integer" resultType="com.zfg.learn.pojo.User">
        select *from user
        where mid = #{mid}
    </select>

    <insert id="insertUser" parameterType="com.zfg.learn.pojo.User">
        insert into user
        (avatar, mid, uname)
        values (#{avatar}, #{mid}, #{uname})
    </insert>

    <insert id="insertUserList" parameterType="com.zfg.learn.pojo.User">
        insert ignore into user
        (avatar, mid, uname)
        values
        <foreach item="user" separator="," collection="userList">
            (
                #{user.avatar},
                #{user.mid},
                #{user.uname}
            )
        </foreach>
    </insert>

    <delete id="deleteUserByMid" parameterType="Integer">
        delete from user where mid = #{mid}
    </delete>
</mapper>


